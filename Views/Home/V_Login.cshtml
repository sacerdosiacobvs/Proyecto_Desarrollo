@model Proyecto.Models.Login
@{
    ViewBag.Title = "V_Login";
}

<!DOCTYPE html>

<title>W3.CSS Template</title>
<html>
<body style="background-color:lightblue">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open Sans">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        h1, h2, h3, h4, h5, h6 {
            font-family: "Oswald"
        }

        body {
            font-family: "Open Sans"
        }
    </style>

    <div class="w3-content w3-white" style="max-width:1600px">

        <!-- Header -->
        <header class="w3-container w3-center w3-padding-48 w3-white">
            <h1 class="w3-xxxlarge"><b>INGRESO DE USUARIO</b></h1><br />
            <h3>Login</h3>
        </header>

        <div class="w3-container w3-center w3-white" style="font-size:20px">
            @using (Html.BeginForm())
            {
                <img src="~/Imagenes/usuario.png" alt="Inicio" style="width:25%">
                <br /><br />
                @Html.TextBoxFor(x => x.cedula, new { placeholder = "Cédula", @class = "badge-light" })
                <br /><br />
                @Html.PasswordFor(x => x.password, new { placeholder = "Password", @class = "badge-light" })
                <br /><br />
                <input class="btn btn-success" type="submit" value="Aceptar" style="font-size:20px">
                <br /><br />
                @Html.ValidationSummary()
            }

        </div>
        <br /><br /><br />
        <br />
    </div>
</body>
</html>

