@model Proyecto.Models.Ver_Citas
@{
    ViewBag.Title = "Set_Cita_Doctor";
    if (Credenciales.u_tipo == "Admin")
    {
        Layout = "~/Views/Shared/Layout_Admin.cshtml";
    }
    else
    {
        if (Credenciales.u_tipo == "Cliente")
        {
            Layout = "~/Views/Shared/Layout_Cliente.cshtml";
        }
        else
        {
            if (Credenciales.u_tipo == "Dentista")
            {
                Layout = "~/Views/Shared/Layout_Dentista.cshtml";
            }
        }
    }
}


<!DOCTYPE html>

<title>W3.CSS Template</title>
<html>
<body style="background-color:lightblue">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open Sans">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        h1, h2, h3, h4, h5, h6 {
            font-family: "Oswald"
        }

        body {
            font-family: "Open Sans"
        }
    </style>

    <div class="w3-content w3-white" style="max-width:1600px">

        <!-- Header -->
        <header class="w3-container w3-center w3-padding-48 w3-white">
            <h1 class="w3-xxxlarge"><b>AGREGAR DENTISTA</b></h1><br />
            <h3>Asigne un dentista para la cita</h3>
        </header>

        <div class="w3-container w3-center w3-white" style="font-size:20px">
            @using (Html.BeginForm())
            {
                if (Credenciales.u_tipo == "Dentista")
                {
                    <p style="font-size:19px">ID:</p> 
                    @Html.TextBoxFor(model => model.id, new { @Readonly = true })<br /><br />
                    <p style="font-size:19px">Nombre:</p> 
                    @Html.TextBoxFor(model => model.doctor, new { @Value = Credenciales.u_nombre, @Readonly = true })
                }
                else
                {
                    <p>ID:</p> 
                    @Html.TextBoxFor(model => model.id, new { @Readonly = true })<br /><br />
                    <p>Nombre:</p> 
                    @Html.TextBoxFor(model => model.doctor)
                }

                @Html.ValidationSummary()
                <br />
                <input class="btn btn-success" type="submit" value="Aceptar">
                <br /><br />
            }

        </div>
        <br /><br /><br />
        <br />
    </div>
</body>
</html>