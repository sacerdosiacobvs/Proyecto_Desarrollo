@{
    ViewBag.Title = "Informacion";
    if (Credenciales.u_tipo == "Admin")
    {
        Layout = "~/Views/Shared/Layout_Admin.cshtml";
    }
    else
    {
        if (Credenciales.u_tipo == "Cliente")
        {
            Layout = "~/Views/Shared/Layout_Cliente.cshtml";
        }
        else
        {
            if (Credenciales.u_tipo == "Dentista")
            {
                Layout = "~/Views/Shared/Layout_Dentista.cshtml";
            }
        }
    }
}

<title>W3.CSS Template</title>
<html>
<body style="background-color:lightblue">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open Sans">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        h1, h2, h3, h4, h5, h6 {
            font-family: "Oswald"
        }

        body {
            font-family: "Open Sans"
        }
    </style>

    <div class="w3-content w3-white" style="max-width:1600px">

        <!-- Header -->
        <header class="w3-container w3-center w3-padding-48 w3-white">
            <h1 class="w3-xxxlarge"><b>INFORMACIÓN DE USUARIO</b></h1><br />
        </header>

        <div class="w3-container w3-center w3-white" style="font-size:20px">
            <img src="~/Imagenes/usuario.png" alt="Inicio" style="width:25%">
            <br /><br />
            <strong style="font-size:28px">Cedula: @Credenciales.u_cedula</strong>
            <br /><br />
            <strong style="font-size:28px">Nombre: @Credenciales.u_nombre</strong>
            <br /><br />
            <strong style="font-size:28px">Tipo de usuario: @Credenciales.u_tipo</strong>
            <br /><br /><br /><br />
            <p style="color:steelblue">@Html.ActionLink(linkText: "Modificar información", actionName: "Modificar_Usuario_Actual", controllerName: "Home")</p>
        </div>
        <br />
        
        <br /><br />
        <br />
    </div>
</body>
</html>

